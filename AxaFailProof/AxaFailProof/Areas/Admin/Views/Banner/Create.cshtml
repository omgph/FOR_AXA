@model AxaFailProof.Models.Banner

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout3.cshtml";
    ViewBag.Title = "Create Banner";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="panel-header">
    <h3>Banner - Home : Create </h3>
</div>
@using (Html.BeginForm("Create", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="panel-body">
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Image)</label>
            <div class="controls">
                @FileUpload.GetHtml(initialNumberOfFiles: 1,allowMoreFilesToBeAdded: false,includeFormTag: false)
                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Label)</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Label, new { @class = "input-text", style = "width:320px;" })<br />
                @Html.ValidationMessageFor(model => model.Label)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Button) Name</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Button, new { @class = "input-text", style = "width:320px;" })<br />
                @Html.ValidationMessageFor(model => model.Button)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Link)</label>
            <div class="controls">
               @Html.TextBoxFor(model => model.Link, new { @class = "input-text", style = "width:320px;" })<br />
                @Html.ValidationMessageFor(model => model.Link)
            </div>
        </div>
    </fieldset>
</div>
<div class="panel-footer">
    <div class="panel-button">
        <input type="button" class="btn-submit panel-button-right" value="Back to List" onclick="location.href='@Url.Action("Index")';" />
        <input type="submit" class="btn-submit panel-button-right" value="Create" />
        <div class="clearboth"></div>
    </div>
</div>
}