@model AxaFailProof.Models.EventsRegistered

@{
    ViewBag.Title = "Create";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="panel-header">
    <h3>Registered User - Event : Create </h3>
</div>
@using (Html.BeginForm("Create", "EventsRegistered", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="panel-body">
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.LocationID, "Location")</label>
            <div class="controls">
                @Html.DropDownList("LocationID", "Select Locastion")
                @Html.ValidationMessageFor(model => model.LocationID)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.EventDate)</label>
            <div class="controls">
            @Html.TextBoxFor(model => model.EventDate, new { @class = "input-text", style = "width:320px;" })
            @Html.ValidationMessageFor(model => model.EventDate)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.FirstName)</label>
            <div class="controls">
            @Html.TextBoxFor(model => model.FirstName, new { @class = "input-text", style = "width:320px;" })
            @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.MiddleName)</label>
            <div class="controls">
            @Html.TextBoxFor(model => model.MiddleName, new { @class = "input-text", style = "width:320px;" })
            @Html.ValidationMessageFor(model => model.MiddleName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.LastName)</label>
            <div class="controls">
            @Html.TextBoxFor(model => model.LastName, new { @class = "input-text", style = "width:320px;" })
            @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.ContactNumber)</label>
            <div class="controls">
            @Html.TextBoxFor(model => model.ContactNumber, new { @class = "input-text", style = "width:320px;" })
            @Html.ValidationMessageFor(model => model.ContactNumber)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Email)</label>
            <div class="controls">
            @Html.TextBoxFor(model => model.Email, new { @class = "input-text", style = "width:320px;" })
            @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.CardHolder)</label>
            <div class="controls">
            @Html.EditorFor(model => model.CardHolder, new { @class = "input-text" })
            @Html.ValidationMessageFor(model => model.CardHolder)
            </div>
        </div>
    </fieldset>
</div>
<div class="panel-footer">
    <div class="panel-button">
        <input type="button" class="btn-submit panel-button-right" value="Back to List" onclick="location.href='@Url.Action("Index")';" />
        <input type="submit" class="btn-submit panel-button-right" value="Create" />
        <div class="clearboth"></div>
    </div>
</div>
}