@model AxaFailProof.Models.Banner
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout3.cshtml";
    ViewBag.Title = "Edit Banner";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="panel-header">
    <h3>Banner - Footer : Edit </h3>
</div>
@using (Html.BeginForm("Edit", "BannerFooter", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="panel-body">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.BannerID)
    @Html.HiddenFor(model => model.Position)
    @Html.HiddenFor(model => model.Image)
    @Html.HiddenFor(model => model.Status)
    @Html.HiddenFor(model => model.DateCreated)
    <fieldset>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Image)</label>
            <div class="controls">
                <img src="/Userfiles/images/@Html.DisplayFor(model => model.Image)" alt="" width="350px;"/>
                @FileUpload.GetHtml(initialNumberOfFiles: 1,allowMoreFilesToBeAdded: false,includeFormTag: false)
                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>
    </fieldset>
</div>
<div class="panel-footer">
    <div class="panel-button">
        <input type="button" class="btn-submit panel-button-right" value="Back to List" onclick="location.href='@Url.Action("Index")';" />
        <input type="submit" class="btn-submit panel-button-right" value="Save" />
        <div class="clearboth"></div>
    </div>
</div>
}
<script type="text/javascript">
    $("#Position option[value='@Model.Position']").attr("selected", "selected");
</script>