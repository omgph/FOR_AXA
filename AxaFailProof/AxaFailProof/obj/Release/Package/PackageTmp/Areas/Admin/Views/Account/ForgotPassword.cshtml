@model Admin.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
}

<script src="@Url.Content("~/Areas/Admin/Content/js/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/Admin/Content/js/modernizr-1.7.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/Admin/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/Admin/Content/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="offset1 span1">
    <div class="page-header">
    <h1>Forgot Your Password?</h1>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="span1 offset1">
        <p>Enter your email address below. We will send you instructions to reset your password.</p>
        <div class="control-group">
            <label class="control-label">Email Address</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Email, new { @class = "input-text", style = "width:220px" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
    </div>
    <div class="span1 offset1">
        <div class="action">
            <input type="submit" class="btn" name="forgot_pass" id="forgot_pass" value="Reset and Email Password >" />
        </div>
    </div>
}
