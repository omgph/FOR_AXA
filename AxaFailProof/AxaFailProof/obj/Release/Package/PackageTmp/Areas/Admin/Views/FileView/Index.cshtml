@model AxaFailProof.ViewModel.FileSystemView
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout3.cshtml";
    ViewBag.Title = "File Management";
}
<div class="panel-header">
    <h3>File Manager</h3>
</div>
<div class="panel-body">
<table class="table table-hover">
    <tr>
        <td>
            @using (Html.BeginForm("FileUpload", "FileView", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <fieldset>
                    <div class="control-group">
                        <label class="control-label">File Uploader (JPG, PNG, GIF)</label>
                        <div class="controls">
                            <input type="file" id="file" name="file"/><input type="submit" value="Upload" class="btn-submit"/>
                        </div>
                    </div>
                </fieldset>                
            }
         </td>
    </tr>
    <tbody>
    @foreach (var file in Model.TempltesImageFiles)
    { 
        <tr>
            <td><span><a href='@System.Configuration.ConfigurationManager.AppSettings["TemplateImageHost"]@file.FileName'>/UserFiles/images/@file.FileName</a></span></td>
        </tr>
    }
    </tbody>
</table>

</div>
<div class="clearboth"></div>
<div class="panel-footer"></div>