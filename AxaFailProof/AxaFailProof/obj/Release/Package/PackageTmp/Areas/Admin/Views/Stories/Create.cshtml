@model AxaFailProof.Models.Story
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout3.cshtml";
    ViewBag.Title = "Stories";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="panel-header">
    <h3>Stories : Create </h3>
</div>
@using (Html.BeginForm("Create", "Stories", FormMethod.Post, new { enctype = "multipart/form-data" })){
<div class="panel-body">
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Author)</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Author, new { @class = "input-text", style = "width:420px;" })<br />
                @Html.ValidationMessageFor(model => model.Author)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Title)</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Title, new { @class = "input-text", style = "width:420px;" })<br />
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label"> @Html.LabelFor(model => model.TopicID, "Topics")</label>
            <div class="controls">
                @Html.DropDownList("TopicID", "Select Topic")
                @Html.ValidationMessageFor(model => model.TopicID)
            </div>
        </div>        
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Image)</label>
            <div class="controls">
                @FileUpload.GetHtml(initialNumberOfFiles: 1,allowMoreFilesToBeAdded: false,includeFormTag: false)
                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Tags)</label>
            <div class="controls">
                @Html.TextAreaFor(model => model.Tags, new { @class = "input-text", style = "width:420px;" })<br />
                @Html.ValidationMessageFor(model => model.Tags)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.MetaKeyWords)</label>
            <div class="controls">
                @Html.TextAreaFor(model => model.MetaKeyWords, new { @class = "input-text", style = "width:420px;" })<br />
                @Html.ValidationMessageFor(model => model.MetaKeyWords)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.MetaDescription)</label>
            <div class="controls">
                @Html.TextAreaFor(model => model.MetaDescription, new { @class = "input-text", style = "width:420px;" })<br />
                @Html.ValidationMessageFor(model => model.MetaDescription)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">@Html.LabelFor(model => model.Body)</label>
            <div class="controls">
                @Html.TextAreaFor(model => model.Body, new { @class = "input-text"})<br />
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>
    </fieldset>
    <script type="text/javascript">
        CKEDITOR.replace('Body');
    </script>

</div>
<div class="panel-footer">
    <div class="panel-button">
        <input type="button" class="btn-submit panel-button-right" value="Back to List" onclick="location.href='@Url.Action("Index")';" />
        <input type="submit" class="btn-submit panel-button-right" value="Create" />
        <div class="clearboth"></div>
    </div>
</div>
}